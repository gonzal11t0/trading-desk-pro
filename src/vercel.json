{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "JWT_SECRET": "@jwt_secret_trading_desk",
    "NEWS_API_KEY": "@news_api_key",
    "ALPHA_VANTAGE_KEY": "@alpha_vantage_key",
    "SCRAPERAPI_KEY": "@scraperapi_key"
  }
}